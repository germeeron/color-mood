
<%= render "nav" %>

<head>
    <style>

        body {
            alignment:      left;
            font-family:    Arial;
            margin-top:     80px;
            margin-left:    50px;
        }

        h1 {
            text-align:         center;
            font-size:          50px;
        }

        a:link {
            text-decoration: none;
        }

        a:visited {
            text-decoration: none;
        }

        .colorMood {
            width:              400px;
            padding-bottom:     20px;
            text-align:         left;
            margin:             auto;
            font-size:          25px;
        }

    </style>
</head>

<h1>color my day</h1>

<div class="colorMood">
<%= form_with model: color do |f| %>

    <p>
        <% if color.errors.any? %>
            <ul>
                <% color.errors.full_messages.each do |message| %>
                    <li><%= message =%></li>
                <% end %>
            </ul>
        <% end %>
    </p>

    <p>
        <%= f.label :user %>
        <%= f.text_field :user %>
    </p>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :mood %>
        <%= f.text_field :mood %>
    </p>
    <div class="button">
        <%= f.submit %>
    </div>
<% end %>
</div>